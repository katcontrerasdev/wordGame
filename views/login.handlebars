<div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8 login-card login-form">
  <div class="max-w-md w-full space-y-8">
    <div>
      <img src="images/avatar.png" alt="Word Logo" width="450" height="450" />
      <h1>
        Sign in to your account
      </h1>
    </div>
    <form class="mt-8 space-y-6" class="login-form">
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <label for="email-address" class="sr-only">Email address</label>
          <input id="email-login" type="email" required class="form-control form-control-lg mb-2" placeholder="Email address">
        </div>
        <div>
          <label for="password" class="sr-only">Password</label>
          <input id="password-login" type="password" required class="form-control form-control-lg mb-2" placeholder="Password">
        </div>
      </div>

      <div class="flex items-right justify-right">

        <div class="text-sm">
          <p class="font-medium text-black-600">Not a registered user? 
          <a href="/register" class="font-medium text-white hover:text-black-500">
          Sign Up Now!
          </a>
          </p>
        </div>
      </div>

      <div>
        <button type="submit" class="btn btn-primary sign-in-btn">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <svg class="h-5 w-5 text-indigo-500 group-hover:text-indigo-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
            </svg>
          </span>
          Sign in
        </button>
      </div>
    </form>
  </div>
</div>
<script src="./js/login.js"></script>




